<h1>Listing all Game Reviews</h1>

<%= link_to 'Write a new review', new_review_path %>

<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th colspan="3"></th>
	</tr>

	<% @reviews.each do |review| %>
    <tr>
      <td><%= review.title %></td>
      <td><%= review.text %></td>
      <td><%= link_to 'Show Review', review_path(review) %></td>
      <td><%= link_to 'Edit Review', edit_review_path(review) %></td>
      <td><%= link_to 'Delete Review', review_path(review),
      									method: :delete, data:{confirm: 'Are you sure?'}
      	%></td>
    </tr>
  <% end %>
</table>