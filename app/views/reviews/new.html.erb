<h1>Write a review</h1>
	<%= form_for :reviews, url: reviews_path do |f| %>
		<p>
			<%= f.label :game_title %><br>
			<%= f.text_field :game_title %>
		</p>

		<p>
			<%= f.label :your_review %><br>
			<%= f.text_area :your_review %>
		</p>

		<p>
			<%= f.submit "submit your review" %>
		</p>
	<% end %>
